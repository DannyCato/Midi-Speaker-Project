{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32 Project", // compiles the project
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build", // build file location
                "--config",
                "Debug" // configuration style
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash STM32 Board", // writes the compiled project to the board
            "type": "shell",
            "command": "STM32_Programmer_CLI",
            "args": [
                "-c",
                "port=SWD", // Flashing interface
                "-w",
                "${workspaceRoot}/build/${workspaceFolderBasename}.elf", // executable file location
                // "-v", // no more verbose please!
                "-rst" // reset on finish
            ],
            "dependsOn": [
                "Build STM32 Project"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Flash", // does both
            "dependsOn": [
                "Build STM32 Project",
                "Flash STM32 Board"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}