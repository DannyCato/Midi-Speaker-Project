{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32 Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash STM32 Board",
            "type": "shell",
            "command": "STM32_Programmer_CLI",
            "args": [
                "-c",
                "port=SWD",
                "-w",
                "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
                // "-v", // no more verbose please!
                "-rst"
            ],
            "dependsOn": [
                "Build STM32 Project"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Flash",
            "dependsOn": [
                "Build STM32 Project",
                "Flash STM32 Board"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}